{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "clang++ build active file",
      "command": "C:\\Users\\tothe\\scoop\\apps\\llvm\\current\\bin\\clang++.exe",
      "args": [
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}.exe",
        "-Weverything",
        "-Wno-exit-time-destructors",
        "-Wno-global-constructors",
        "-Wno-c++98-compat"
      ],
      "problemMatcher": {
        "base": "$gcc",
        "fileLocation": "absolute"
      },
      "presentation": {
        "reveal": "silent",
        "focus": true,
        "showReuseMessage": false,
        "clear": true
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
